{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./api/dist",
    "rootDir": "./api/src",
    "declaration": false,
    "sourceMap": true,
    "types": ["node"],
    "skipLibCheck": true,
    "noImplicitAny": false,
  },
  "include": ["api/src/**/*.ts"],
  "exclude": ["tests/**/*.ts", "scripts/**/*.ts"],
}
